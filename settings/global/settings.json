{
  "version": "1.0.0",
  "additionalDirectories": [
      "~/.claude",
      "~/.claude/agents",
      "~/.claude/hooks"
    ],
  "environment": {
    "default_editor": "${EDITOR:-vim}",
    "shell": "${SHELL:-/bin/bash}",
    "working_directory": "${HOME}/projects"
  },
  "claude_code": {
    "model": "claude-opus-4-1-20250805",
    "max_tokens": 8192,
    "temperature": 0.0,
    "tools": {
      "enabled": true,
      "parallel_execution": true,
      "max_parallel_calls": 10
    },
    "agents": {
      "auto_load": true,
      "directories": [
        "~/.claude/agents",
        "./agents"
      ]
    },
    "mcp_servers": {
      "auto_start": true,
      "timeout": 30000
    }
  },
  "hooks": {
    "PreSession": [
      {
        "matcher": {},
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/session-start/auto-logger.sh"
          }
        ]
      }
    ],
    "PostSession": [
      {
        "matcher": {},
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/session-end/auto-analyzer.sh ${CLAUDE_SESSION_ID} ${CLAUDE_SESSION_LOG}"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": {
          "tools": ["Read", "Write", "Edit", "Bash", "MultiEdit"]
        },
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/tool-use/log-interceptor.sh ${TOOL_NAME} ${TOOL_PARAMS}"
          }
        ]
      }
    ]
  },
  "security": {
    "disable_dangerous_commands": true,
    "require_confirmation": [
      "rm -rf",
      "git push --force",
      "DROP TABLE",
      "DELETE FROM",
      "sudo rm",
      "chmod 777",
      "curl | bash",
      "wget | sh"
    ],
    "blocked_domains": [],
    "allowed_directories": []
  },
  "logging": {
    "enabled": true,
    "level": "info",
    "file": "~/.claude/logs/claude-code.log",
    "audit_security_events": true,
    "rotate_size": "10MB",
    "rotate_count": 5
  },
  "profiles": {
    "default": "personal",
    "available": ["personal", "work", "client"]
  }
}
