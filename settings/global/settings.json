{
  "version": "1.0.0",
  "additionalDirectories": [
      "~/.claude",
      "~/.claude/agents",
      "~/.claude/hooks"
    ],
  "environment": {
    "default_editor": "${EDITOR:-vim}",
    "shell": "${SHELL:-/bin/bash}",
    "working_directory": "${HOME}/projects"
  },
  "claude_code": {
    "model": "claude-opus-4-1-20250805",
    "max_tokens": 8192,
    "temperature": 0.0,
    "tools": {
      "enabled": true,
      "parallel_execution": true,
      "max_parallel_calls": 10
    },
    "agents": {
      "auto_load": true,
      "directories": [
        "~/.claude/agents",
        "./agents"
      ]
    },
    "mcp_servers": {
      "auto_start": true,
      "timeout": 30000
    }
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/simple-logger.sh",
            "timeout": 2
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/simple-logger.sh analyze",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "security": {
    "disable_dangerous_commands": true,
    "require_confirmation": [
      "rm -rf",
      "git push --force",
      "DROP TABLE",
      "DELETE FROM",
      "sudo rm",
      "chmod 777",
      "curl | bash",
      "wget | sh"
    ],
    "blocked_domains": [],
    "allowed_directories": []
  },
  "logging": {
    "enabled": true,
    "level": "info",
    "file": "~/.claude/logs/claude-code.log",
    "audit_security_events": true,
    "rotate_size": "10MB",
    "rotate_count": 5
  },
  "profiles": {
    "default": "personal",
    "available": ["personal", "work", "client"]
  },
  "permissions": {
    "allow": [
      "mcp__sequential-thinking__sequentialthinking",
      "Bash(mkdir:*)",
      "Bash(chmod:*)",
      "Bash(tree:*)",
      "Bash(git init:*)",
      "Bash(git add:*)",
      "Bash(gh repo create:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git remote add:*)",
      "Bash(git remote set-url:*)",
      "Bash(gh repo view:*)",
      "Bash(git pull:*)",
      "Bash(git fetch:*)",
      "Bash(./scripts/setup.sh:*)",
      "Bash(source ~/.bashrc)",
      "Bash(./scripts/validate.sh:*)",
      "Bash(if [ -f package.json ])",
      "Bash(then npm install)",
      "Bash(elif [ -f requirements.txt ])",
      "Bash(then pip install -r requirements.txt)",
      "Bash(elif [ -f Gemfile ])",
      "Bash(then bundle install)",
      "Bash(else echo \"No dependency file found\")",
      "Bash(fi)",
      "Bash(if [ -f scripts/setup.sh ])",
      "Bash(else echo \"No setup script found\")",
      "Bash(./scripts/sync.sh:*)",
      "Bash(rm:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(mv:*)",
      "Bash(touch:*)",
      "Bash(go:*)",
      "Bash(ruff:*)",
      "Bash(ruff check:*)",
      "WebFetch(domain:*)",
      "Bash(gh issue view:*)",
      "Bash(gh auth:*)",
      "Bash(gh org:*)",
      "mcp__serena",
      "Bash(cp:*)",
      "Bash(ln:*)",
      "Bash(sed:*)",
      "Bash(awk:*)",
      "Bash(diff:*)",
      "Bash(patch:*)",
      "Bash(tar:*)",
      "Bash(zip:*)",
      "Bash(unzip:*)",
      "Bash(rsync:*)",
      "Bash(wc:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(file:*)",
      "Bash(which:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(cd:*)",
      "Bash(echo:*)",
      "Bash(cat:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git merge:*)",
      "Bash(git stash:*)",
      "Bash(git clone:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(git clean:*)",
      "Bash(npm:*)",
      "Bash(yarn:*)",
      "Bash(pnpm:*)",
      "Bash(pip:*)",
      "Bash(pip3:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(go get:*)",
      "Bash(go mod:*)",
      "Bash(go build:*)",
      "Bash(go test:*)",
      "Bash(go run:*)",
      "Bash(cargo:*)",
      "Bash(rustc:*)",
      "Bash(make:*)",
      "Bash(cmake:*)",
      "Bash(docker:*)",
      "Bash(docker-compose:*)",
      "Bash(kubectl:*)",
      "Bash(terraform:*)",
      "Bash(az:*)",
      "Bash(aws:*)",
      "Bash(gcloud:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(jq:*)",
      "Bash(yq:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(cut:*)",
      "Bash(paste:*)",
      "Bash(tr:*)",
      "Bash(tee:*)",
      "Bash(xargs:*)",
      "Bash(test:*)",
      "Bash([:*)",
      "Bash([[:*)",
      "Bash(export:*)",
      "Bash(source:*)",
      "Bash(.:*)",
      "Bash(bash:*)",
      "Bash(sh:*)",
      "Bash(zsh:*)",
      "Bash(fish:*)"
    ],
    "deny": [],
    "ask": [],
    "additionalDirectories": [
      "~/.claude",
      "~/.claude/agents",
      "~/.claude/hooks",
      "~/Documents/code/claude",
      "~/Documents/code/claude/.claude"
    ]
  }
}
